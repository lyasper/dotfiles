(defun switch-to-previous-buffer ()
      (interactive)
      (switch-to-buffer (other-buffer (current-buffer) 1)))
(global-set-key (kbd "<f6>") 'switch-to-previous-buffer)

(global-set-key (kbd "C-x g e") 'end-of-buffer)
